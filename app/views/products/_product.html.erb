<div id="<%= dom_id product %>" data-controller="share" data-share-url-value="<%= product_url(product) %>">
  <p>
    <strong>Name:</strong>
    <%# product.name %>
    <%= content_tag(:p, product.name, data:{
      share_target: "name"
    }) %>
  </p>
  <p>
    <strong>price:</strong>
    <%# product.price %>
    <%= content_tag(:div, product.price, data:{
      share_target: "price"
    }) %>
  </p>
  <%= button_to "Share", "", data: { action: "click->share#share"} %>
  <%= content_tag(:p, "", class: "result", data: {
    share_target: "result"
  }) %>
</div>
