<div id="<%= dom_id product %>" data-controller="share" data-share-url-value="<%= product_url(product) %>">
  <p>
    <strong>Name:</strong>
    <%# product.name %>
    <%= content_tag(:p, product.name, data:{
      share_target: "name"
    }) %>
  </p>
  <p>
    <strong>price:</strong>
    <%# product.price %>
    <%= content_tag(:div, product.price, data:{
      share_target: "price"
    }) %>
  </p>
  <%= button_to "Share", "", data: { action: "click->share#share"} %>
  <%= content_tag(:p, "", class: "result", data: {
    share_target: "result"
  }) %>

  <p>
    <a onclick="javascript:window.open('http://www.facebook.com/sharer/sharer.php?u=<%= url_for([product, {only_path: false}]) %>',
      '_blank',
      'width=800, height=500, top=200, left=300');void(0);">here FB!!!<i class="fa fa-facebook" aria-hidden="true"></i>
    </a>
    <a onclick="javascript:window.open('https://twitter.com/intent/tweet?text=<%= product.name %> by @someuser - &amp;url=<%= url_for([product, {only_path: false}]) %>',
      '_blank',
      'width=800, height=500, top=200, left=300');void(0);">here TT!!<i class="fa fa-twitter" aria-hidden="true"></i></i>
    </a>
  </p>
</div>
