<div>
  <%= simple_form_for(@variant) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :product_id, input_html: { value: "#{@product.id}" } %>
      <%= f.input :colour %>

      <div><%= f.input :image_url %></div>
      <div><%= f.file_field :image_var, type: 'file', id: 'imageVariantUploader', accept: '.png, .jpeg, .jpg' %></div>
      <div><%= f.hidden_field :image_var_cache %></div>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
